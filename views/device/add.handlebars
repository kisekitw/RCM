{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}

<div class="card card-body">
    <h3>Add Device</h3>
    <form action="/device" method="post">
        <div class="form-group">
            <label for="devName">Device Name</label>
            <input type="text" class="form-control" id="devName" name="devName" required>
        </div>
        <div class="form-group">
            <label for="devIP">Device IP</label>
            <input type="text" class="form-control" id="devIP" placeholder="ex:127.0.0.1" name="devIP" required>
        </div>
        <div class="form-group">
            <label for="devPort">Device Port</label>
            <input type="text" class="form-control" id="devPort" placeholder="ex:8088" name="devPort" required>
        </div>
        <button class="btn btn-primary">Submit</button>
    </form>
</div>