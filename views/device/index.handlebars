{{#each devices}}

<div class="card card-body mb-2">
    <h4>{{devName}}</h4>
    <p>{{devIP}}:{{devPort}}</p>
    <p>{{createUser}}-{{createDate}}</p>
    <p>{{updateUser}}-{{updateDate}}</p>
    <a href="/device/edit/{{id}}" class="btn btn-dark btn-block">Edit</a>
</div>

{{else}}
<p>- No device listed -</p>
{{/each}}